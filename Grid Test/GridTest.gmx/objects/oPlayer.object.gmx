            <string>//How fast does the oPlayer move?

characterSpeed = 4

draw_text(object.15,object.15-sprite_height,nextInput)

//Buffering input for next available input opportunity

if keyboard_check(ord('A')) {
    nextInput = 1
}

if keyboard_check(ord('D')) {
    nextInput = 2
}

if keyboard_check(ord('W')) {
    nextInput = 3
}

if keyboard_check(ord('S')) {
    nextInput = 4
}

//Redefining the next destination of oPlayer when input is detected.
//Also restricts oPlayer from moving in the opposite of their current oDirection

if(x = xDestination) and (y = yDestination) and (nextInput = 1) and (oDirection != 2){
    xDestination = xDestination - oGlobal.gridBase;
    image_angle = 180;
    oDirection = 1;
}

if(x = xDestination) and (y = yDestination) and (nextInput = 2) and (oDirection != 1){
    xDestination = xDestination + oGlobal.gridBase;
    image_angle = 0;
    oDirection = 2;
}
    
if(x = xDestination) and (y = yDestination) and (nextInput = 3) and (oDirection != 4) {
    yDestination = yDestination - oGlobal.gridBase;
    image_angle = 90;
    oDirection = 3;
}
    
if(x = xDestination) and (y = yDestination) and (nextInput = 4) and (oDirection != 3) {
    yDestination = yDestination + oGlobal.gridBase;
    image_angle = 270;
    oDirection = 4;
}

//Moving oPlayer to the next destination

if (y &gt; yDestination) {
    y = y - characterSpeed;
}
if (x &lt; xDestination) {
    x = x + characterSpeed;
}
if (y &lt; yDestination) {
    y = y + characterSpeed;
}
if (x &gt; xDestination) {
    x = x - characterSpeed;
}

//oPlayer will keep going in their current oDirection unless another input is detected when they reach their next destination

if (x = xDestination and y = yDestination) {
    if (oDirection = 1 and ((keyboard_check(vk_nokey)) or keyboard_check(ord('D'))))  {
        xDestination = xDestination - oGlobal.gridBase;
    }else if (oDirection = 2 and ((keyboard_check(vk_nokey))or keyboard_check(ord('A')))){
        xDestination = xDestination + oGlobal.gridBase;
    }else if (oDirection = 3 and ((keyboard_check(vk_nokey))or keyboard_check(ord('S')))){
        yDestination = yDestination - oGlobal.gridBase;
    }else if (oDirection = 4 and ((keyboard_check(vk_nokey))or keyboard_check(ord('W')))){
        yDestination = yDestination + oGlobal.gridBase;
    }
}

//bounce player back into the room if they reach the edge

if (x&lt;(room_width-room_width)){
    xDestination = (oGlobal.gridBase/2);
    image_angle = 0;
    oDirection = 2;
}

if (x&gt;(room_width)){
    xDestination = room_width - (oGlobal.gridBase/2);
    image_angle = 180;
    oDirection = 1;
}

if (y&lt;(room_height-room_height)){
    yDestination = (oGlobal.gridBase/2);
    image_angle = 270;
    oDirection = 4;
}

if (y&gt;(room_height)){
    yDestination = room_height - (oGlobal.gridBase/2);
    image_angle = 90;
    oDirection = 3;
}
